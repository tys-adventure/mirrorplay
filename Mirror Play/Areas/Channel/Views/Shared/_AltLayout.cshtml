<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="@Url.Content("~/Images/icon.png")" />
    <title>@ViewBag.Title | Elevate Your Pitch</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="frontend">
    <nav class="navbar navbar-light navbar-expand-md bg-white justify-content-center py-4 with-sidebar">
        <div class="container">
            <a href="@Url.Action("Index", "Home", new { Area = "" })" class="navbar-brand mr-0">
                <img style="max-height: 75px; height: 40px; width: auto;" src="~/Images/Longhand.png" />
            </a>
            <button class="navbar-toggler ml-1" type="button" data-toggle="collapse" data-target="#collapsingNavbar2">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse justify-content-between align-items-center w-100" id="collapsingNavbar2">
                <ul class="navbar-nav mx-auto text-center">
                    <li class="nav-item dropdown">

                        <a class="nav-link dropdown-toggle full-width-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Videos
                        </a>
                        <div class="dropdown-menu full-width" aria-labelledby="navbarDropdown">
                            <div class="container">
                                <a class="dropdown-item" href="@Url.Action("Index", "Videos", new { Area = "V" })">All</a>
                                <a class="dropdown-item" href="#">By Category</a>
                                <a class="dropdown-item" href="#">By Popularity</a>
                                <a class="dropdown-item" href="#">Featured</a>
                                <a class="dropdown-item" href="#">Channels</a>
                            </div>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Advertising</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Resources
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">About</a>
                            <a class="dropdown-item" href="#">Ad Choices</a>
                            <a class="dropdown-item" href="#">Advertisers</a>
                            <a class="dropdown-item" href="#">User Guidelines</a>
                            <a class="dropdown-item" href="#">Cookie Policy</a>
                            <a class="dropdown-item" href="#">Developers</a>
                            <a class="dropdown-item" href="#">Jobs</a>
                            <a class="dropdown-item" href="#">Security</a>
                            <a class="dropdown-item" href="#">Privacy Policy</a>
                            <a class="dropdown-item" href="#">Terms</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">What is premium</a>
                            <a class="dropdown-item" href="#">How to remove your account</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Blog</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav flex-row justify-content-center flex-nowrap">
                    <li class="nav-item"><a class="nav-link" href="">Account</a></li>
                    <li class="nav-item"><a class="nav-link menu-btn btn btn-primary">View The Demo</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">
                <img draggable="false" src="~/Images/channel_avi.jpg" />
            </div>
            <div class="channel-name">
                <h4>Channel Name</h4>
            </div>
            <ul class="list-inline channel-buttons">

                <li class="list-inline-item"><button type="button" data-toggle="tooltip" data-html="true" title="Follow <u>with</u>" class="channel-btn text-center" id="follow"><i id="follow_icon" class="fas fa-plus"></i></button></li>
                <li class="list-inline-item"><button class="channel-btn text-center" id="message"><i id="message_icon" class="fas fa-envelope"></i></button></li>
                <li class="list-inline-item"><button class="channel-btn text-center" id="donate"><i id="donate_icon" class="fas fa-dollar-sign"></i></button></li>
            </ul>
            <div class="list-group list-group-flush">
                <a href="#" class="list-group-item list-group-item-action channel-list active">Videos</a>
                <a href="#" class="list-group-item list-group-item-action channel-list">Playlist</a>
                <a href="#" class="list-group-item list-group-item-action channel-list">About</a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div class="content-container" id="page-content-wrapper">
            @RenderBody()
        </div>
        <!-- /#page-content-wrapper -->

    </div>

    <script id="mcjs">!function (c, h, i, m, p) { m = c.createElement(h), p = c.getElementsByTagName(h)[0], m.async = 1, m.src = i, p.parentNode.insertBefore(m, p) }(document, "script", "https://chimpstatic.com/mcjs-connected/js/users/091fe72160bfee34a08119a2c/b993fcf7a5a8d2b784c7869e3.js");</script>
    <script src="//cdn.jsdelivr.net/npm/afterglowplayer@1.x"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
